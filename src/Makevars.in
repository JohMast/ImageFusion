#Add the gdal opencv headers and the imagefusion headers from the /include directory
PKG_CPPFLAGS= @PKG_CPPFLAGS@ -I../src/utils/helpers  -I/usr/include/opencv4/opencv -I/usr/include/opencv4 -D_DATA_PREFIX=/usr  -DWITH_OMP \ $(SHLIB_OPENMP_CFLAGS)
#Also include boost_filesystem manually 
PKG_LIBS= @PKG_LIBS@ -lopencv_imgproc -lopencv_core -L/usr/include  -L/usr/include $(SHLIB_OPENMP_CFLAGS) 

PKG_CXXFLAGS = -Iinclude 
CXX_STD=CXX17
#Add all cpp files from the subfolder src
CPPFILES = $(wildcard *.cpp src/*.cpp utils/helpers/*common.cpp)
SOURCES = $(CPPFILES)
OBJECTS = $(CPPFILES:.cpp=.o)


